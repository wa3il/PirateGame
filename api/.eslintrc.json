{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", "tab"]
    },
    "globals": {
        "__dirname": "readonly"
    },
    "ignorePatterns": ["**/public/*.bundle.js"]
}